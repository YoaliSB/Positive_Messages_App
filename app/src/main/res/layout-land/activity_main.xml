<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/message"
        android:layout_width="345dp"
        android:layout_height="86dp"
        android:layout_marginEnd="204dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="204dp"
        android:layout_marginTop="8dp"
        android:autoSizeMaxTextSize="40sp"
        android:autoSizeMinTextSize="24sp"
        android:autoSizeStepGranularity="5sp"
        android:autoSizeTextType="uniform"
        android:text="Hello World!"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.036"

        />

    <Button
        android:id="@+id/rand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="48dp"
        android:layout_marginRight="48dp"
        android:onClick="next"
        android:text="Siguiente"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="26dp" />

    <Switch
        android:id="@+id/daynight"
        android:layout_width="101dp"
        android:layout_height="26dp"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="28dp"
        android:checked="false"
        android:text="Noche"
        android:textOff="Noche"
        android:textOn="DÃ­a"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rand" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="80dp"
        android:layout_marginRight="80dp"
        android:layout_marginTop="112dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/daynight" />

    <LinearLayout
        android:layout_width="576dp"
        android:layout_height="96dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="129dp"></LinearLayout>

</android.support.constraint.ConstraintLayout>